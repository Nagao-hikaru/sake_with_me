<div class="devise-body">
<div class="devise-main">

  <%# <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %> 
  <%= form_with model: @user, url: user_password_path, class: 'devise-content', local: true do |f| %>
  <div class="form-wrap">
    <%= render "devise/shared/error_messages", resource: resource %>

    <h1 class="form-header-text">パスワードを忘れた方</h1>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.submit "送信", class: 'submit-btn', id: 'submit' %>
    </div>
  <%= render "devise/shared/links" %>
  <%= link_to 'トップページ', "/", class: 'root-top'%>

  </div>
  <% end %>
</div>

</div>


