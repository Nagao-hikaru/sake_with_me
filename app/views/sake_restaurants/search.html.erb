<h1>日本酒いいよね</h1>

<%= form_with model: [@restaurant, @sake_restaurant], url: add_create_sake_restaurant_path, method: :post, class: 'devise-content', local: true do |f|%>

  <%= render "shared/error_messages", model: f.object %>

<%= f.label :sake_id, "日本酒"%>
<%= f.collection_select(:sake_id, Sake.all, :id, :name, {prompt: '選択してください'}, {})%>

<%= f.submit "投稿する", class: 'submit-btn', id: 'submit'%>


<% end %>