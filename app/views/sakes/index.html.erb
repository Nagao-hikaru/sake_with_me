
    <%= render partial: "shared/header3" %>
    <main>
      <%= search_form_for @search, name: 'search', url: sakes_path do |f| %>
  <%= f.label :name_cont, "商品名" %>
  <%= f.search_field :name_cont, id: 'sake' %>

  <%= f.label :company_eq, '酒蔵'%>
  <%= f.collection_select :company_eq, @sake_company, :company, :company,  include_blank: '指定なし' %>

  <%= f.label :type_id_gt, "種類", class: 'form-text'%>
    <%= f.collection_select(:type_id_gt, Type.all, :id, :name, {include_blank: '指定なし'}, {class: 'input-default'}) %>
  <br>
  <%= f.submit '検索', id: 'ransack' %>
  
<% end %>
<div id="search">
    <h2 style="text-align: center;">音声認識</h2>
    <div style="margin: 0px 47%;">
        <button id="start_btn" style="text-align: center; height: 50px; width: 100px;">start</button>
    </div>
</div>
      <ul class="main-body">
        <% @results.each do |sake|%>
          <li class="restaurant-list">
            <%= link_to sake_path(sake), class: 'detail-restaurant' do %>
              <div class="restaurant-name">
                <span><%= sake.name %></span>
                </div>
       
              <div class="detail">
                <div class= "detail-left">
                  <%= image_tag sake.image.variant(resize:'300X300'), class: 'img-restaurant'%>
                </div>
                <ul class="detail-right">
                  <li class="genre">
                    <p class="genre-list">種類</p>
                    <p class="genre-name"><%= sake.type.name%></p>
                  </li>
                  <li class="genre">
                    <p class="genre-list">日本酒度</p>
                    <p class="genre-name"><%= sake.sake_degree%></p>
                  </li>
                  <li class="genre">
                    <p class="genre-list">酒蔵</p>
                    <p class="genre-name"><%= sake.company%></p>
                  </li>
                  <li class="genre">
                    <p class="genre-list">投稿者</p>
                    <p class="genre-name"><%= sake.user.name%></p>
                  </li>
                </ul>
              </div>
            <% end %>
          </li>
        <%end%>
      </ul>
    </main>
    <%= render partial: "shared/footer" %>